{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build",
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "removeComments": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "contracts/*.ts",
        "src/**/*.ts",
    ]
}